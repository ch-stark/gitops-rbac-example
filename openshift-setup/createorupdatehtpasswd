SECRET=htpass-secret-xxx

echo "Creating htpasswd file"

htpasswd -c -b -B htpasswd rootadmin 123456
htpasswd -b -B htpasswd admin 123456

htpasswd -b -B htpasswd john 123456
htpasswd -b -B htpasswd paul 123456
htpasswd -b -B htpasswd ringo 123456
htpasswd -b -B htpasswd george 123456
htpasswd -b -B htpasswd pete 123456

htpasswd -b -B htpasswd andrew 123456
htpasswd -b -B htpasswd karla 123456
htpasswd -b -B htpasswd marina 123456

htpasswd -b -B htpasswd user1 123456
htpasswd -b -B htpasswd user2 123456
htpasswd -b -B htpasswd user3 123456

htpasswd -b -B htpasswd dev1 123456
htpasswd -b -B htpasswd dev2 123456
htpasswd -b -B htpasswd dev3 123456

htpasswd -b -B htpasswd ops1 123456
htpasswd -b -B htpasswd ops2 123456
htpasswd -b -B htpasswd ops3 123456

htpasswd -b -B htpasswd manager1 123456
htpasswd -b -B htpasswd manager2 123456
htpasswd -b -B htpasswd manager3 123456

htpasswd -b -B htpasswd viewer1 123456
htpasswd -b -B htpasswd viewer2 123456
htpasswd -b -B htpasswd viewer3 123456


htpasswd -b -B htpasswd dev 123456
htpasswd -b -B htpasswd qua 123456
htpasswd -b -B htpasswd prd 123456


cat htpasswd | base64 -w 0

cat << EOF >${SECRET}.yaml

apiVersion: v1
kind: Secret
metadata:
  name: htpass-secret
  namespace: openshift-config
  annotations:
    argocd.argoproj.io/sync-options: Prune=false
    argocd.argoproj.io/compare-options: IgnoreExtraneous
data:
  htpasswd: $(cat htpasswd | base64 -w 0)
type: Opaque

EOF